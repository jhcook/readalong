{
  "manifest_version": 3,
  "name": "ReadAlong",
  "version": "0.1.0",
  "description": "Extract text from webpages for a clean reading experience.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "audio-processor.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}